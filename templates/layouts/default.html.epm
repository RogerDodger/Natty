<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width">

      <title>{{= title }} â€¢ Natty</title>

      <link rel="stylesheet" href="/style/normalize.css">
      <link rel="stylesheet" href="/style/font-awesome.min.css">
      <link rel="stylesheet" href="/style/natty.css">

      <script src="/js/jquery-2.2.3.min.js"></script>
      <script src="/js/natty.js"></script>
   </head>
   <body>
      <div class="Site-main {{= 'sidebar' if user() }}">
         <nav class="Site-header">
            <div class="Site-header--container">
               <ul class="Site-header--global">
                  <li class="Site-logo"><a href="/">Natty</a>
                  <li><a href="/players">Players</a>
               </ul>

               <ul class="Site-header--user">
               % if (user) {
                  <li>{{= user()->name }}
                  <li><a href="/logout">Logout</a>
               % } else {
                  <li><a href="/login">Login</a>
               % }
               </ul>
            </div>
         </nav>
         <div class="Site-content">
            % if (flash 'error_msg') {
            <div class="Flash error">
               {{= flash 'error_msg' }}
            </div>
            % }

            {{= content }}
         </div>
      </div>

      % if (user()) {
      <div class="Admin-panel">
         <div class="Players-panel">
            % for my $player ($players->all) {
            <div class="Player {{= 'online' if config('onlineCache')->get($player->id) }}">
               <div class="Player-tag">
                  {{= $player->tag }}
               </div>
               <div class="Player-online">
                  <form method="post" action="{{= url_for 'player-online', pid => $player->id }}">
                     <button>
                        <i class="fa fa-circle"></i>
                     </buton>
                  </form>
               </div>
            </div>
            % }
         </div>
      </div>
      % }
   </body>
</html>
